{
  "name": "douglasffilho.dev",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/douglasffilho/douglasffilho.dev.git"
  },
  "keywords": [
    "Douglas",
    "Filho",
    "Dev"
  ],
  "author": "Douglas Filho",
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --maxWorkers=50% --forceExit --env=jsdom --collectCoverage --detectOpenHandles",
    "test:dev": "jest --maxWorkers=50% --watch --env=jsdom --updateSnapshot --collectCoverage --detectOpenHandles",
    "coverage": "yarn test && google-chrome-stable coverage/lcov-report/index.html",
    "clean": "chmod +x clean && ./clean"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/plugin-syntax-jsx": "^7.14.5",
    "@svgr/webpack": "^5.5.0",
    "babel-jest": "^27.0.6",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^14.1.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.9.0",
    "git-cz": "4.7.6",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-axe": "^5.0.1",
    "jest-dom": "^4.0.0",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  }
}
